<% content_for :body_content_title do %>
  <%= @crop_image.title %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Original Image</h1>
    <p>
      <%=raw @crop_image.original_image_id %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="crop_images">
      <% @crop_images.each do |crop_image| %>
        <li>
          <%= link_to crop_image.title, refinery.crop_images_crop_image_path(crop_image) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
